<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--字符编码过滤器-->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.chenle.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--登陆-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.chenle.servlet.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!--注册-->
    <servlet>
        <servlet-name>RegServlet</servlet-name>
        <servlet-class>com.chenle.servlet.user.RegServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegServlet</servlet-name>
        <url-pattern>/reg</url-pattern>
    </servlet-mapping>
    <!--注销登陆-->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.chenle.servlet.user.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/jsp/logout</url-pattern>
    </servlet-mapping>
    <!--改密码-->
    <servlet>
        <servlet-name>gaimimaServlet</servlet-name>
        <servlet-class>com.chenle.servlet.user.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>gaimimaServlet</servlet-name>
        <url-pattern>/jsp/user</url-pattern>
    </servlet-mapping>
    <!--用户登陆过滤器-->
    <filter>
        <filter-name>SysFilter</filter-name>
        <filter-class>com.chenle.filter.SysFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SysFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>

    <!--设置欢迎页面  //首页-->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <!--默认session过期时间-->
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
</web-app>